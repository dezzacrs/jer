@model LojaRoupasMVCv6.Models.POJO.Vendedores

@{
    ViewBag.Title = "JeR - Vendedores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Scripts/jquery.mask.min.js"></script>

<script>

    jQuery(function ($) {
        $("#telefoneVendedor").mask("(99) 9999-99999");
    });

</script>

<h2>Editar Vendedor</h2>

<form action="VendedoresEdit" method="post">

    <input type="hidden" value="@Model.idVendedor" id="idVendedor" name="idVendedor" required />
    <br />
    <b><h7>Nome: </h7></b> <input type="text" placeholder="@Model.nomeVendedor" value="@Model.nomeVendedor" id="nomeVendedor" name="nomeVendedor" required />
    <br />
    <b><h7>Telefone: </h7></b><input type="text" placeholder="@Model.telefoneVendedor" value="@Model.telefoneVendedor" id="telefoneVendedor" pattern="\([0-9]{2}\) [0-9]{4}-[0-9]{4,5}$" name="telefonevendedor" required />
    <br />
    <b><h7>Senha: </h7></b><input type="password" id="senhaVendedor" name="senhaVendedor" required />
    <br />
    <br />
    <input type="submit" value="Editar" class="btngreen" />

</form>