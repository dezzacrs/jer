@model IEnumerable<LojaRoupasMVCv6.Models.POJO.Vendas>
@{
    ViewBag.Title = "JeR - Débitos";
}

<h2>Débitos</h2>



   <h8> Cliente:</h8> <h7>@Session["Msg"] </h7>

<br /><br />

@if(Model.Count() > 0){
    

    <table>
        <tr>
            <th>
                Venda&ensp;
            </th>
            
            <th>
                &ensp;Data
            </th>
            <th>
                Total
            </th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.idVenda)</center>
                </td>
                
                <td>
                    &ensp;@Html.DisplayFor(modelItem => item.dataVenda)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.totalVenda)
                </td>

                <td>
                    @Html.ActionLink("Detalhes", "Details", new { id = item.idVenda })

                </td>

                <td>
                    @Html.ActionLink("Ver parcelas", "verParcelas", new { id = item.idVenda })

                </td>





            </tr>
        }
    </table>
    
}
else
{
    <h9>Esse vendedor não possui débitos em aberto.</h9>
}
